


    <!DOCTYPE html>
    <html lang="en">
    
    <head>
        <%- include('../partials/head'); %>
    </head>
    
    <body class="container">
    
        <header>
            <%- include('../partials/header'); %>
        </header>
        <% if (messages.error) { %>
            <p style="color:red"><%- messages.error %></p>
            <% } %>
            <% if (messages.success) { %>
            <p style="color:green"><%- messages.success %></p>
            <% } %>
    <form action="/add" method="post" name="form1">
        <div class="form-group">
            <label for="exampleInputPassword1">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                placeholder="Enter email" value="">
        </div>
        <div class="form-group">
            <label for="number">number</label>
            <input type="number" class="form-control" name="number" id="number value=" <%=number %>" placeholder="Name">
        </div>
        <input type="submit" class="btn btn-primary" value="Add">
    </form>
</body>

</html>